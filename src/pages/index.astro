---
const response = await fetch('https://stackable.club/version-test/api/1.1/obj/course');
const data = await response.json();
const items = data.response.results;

// Fallback formatter
function jsonLd(course) {
  return {
    "@context": "https://schema.org",
    "@type": "Course",
    "name": course.Name || "Untitled Course",
    "description": course.Description || "No description provided",
    // You can add more fields if available, like provider, datePublished, etc.
  };
}
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>My Astro Page</title>

    {items.map((item) => (
      <script type="application/ld+json">
        {JSON.stringify(jsonLd(item), null, 2)}
      </script>
    ))}
  </head>
  <body>
    <h1>Bubble Data</h1>
    <ul>
      {items.map((item) => (
        <li>
          <strong>{item.Name}</strong>: {item.Description}
        </li>
      ))}
    </ul>
  </body>
</html>
